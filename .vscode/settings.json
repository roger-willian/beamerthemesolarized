{   
    "explorer.excludeGitIgnore": true,
    "editor.wordWrap": "on",
    "editor.rulers": [30, 80, 72],
    "cSpell.language": "pt-BR, en-GB",
    "cSpell.words": [
        "booleano"
    ],
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.viewer.command": "okular",
    "latex-workshop.view.pdf.external.viewer.args": [
        "--unique",
        "%PDF%"
    ],
    "latex-workshop.view.pdf.external.synctex.command": "okular",
    "latex-workshop.view.pdf.external.synctex.args": [
        "--unique",
        "%PDF%#src:%LINE%%TEX%"
    ],

    // TODO tree settings
    "todo-tree.filtering.includeGlobs": [
        "**/*.tex",
        "**.cls",
        "**.bib"
    ],
    "todo-tree.general.exportPath": "~/todo.txt",
    "todo-tree.tree.flat": true,
    "todo-tree.tree.groupedByTag": true,
    "todo-tree.general.tags": [
        "XXX", "TEMP",
        "FIXME", "BUG", "TODO", "OPTIMIZE",
        "REVIEW", "COMBAK", "DEBUG",
        "QUESTION", "IDEA", "NOTE",
        "CHANGED", "NB", "HACK"
    ],
    "todo-tree.general.tagGroups": {
        "TEMP": [
            "XXX", "TEMP"
        ],
        "TODO": [
            "FIXME", "BUG", "TODO", "OPTIMIZE"    
        ],
        "REVIEW": [
            "REVIEW", "COMBAK", "DEBUG"
        ],
        "QUESTION": [
            "QUESTION", "IDEA", "NOTE"
        ],
        "HACK": [
            "CHANGED", "NB", "HACK"
        ]
    },
    "todo-tree.regex.regex": "(\\b($TAGS): )",
    "todo-tree.highlights.defaultHighlight": {
        "gutterIcon": true,
        "rulerLane": "full"
    },
    "todo-tree.highlights.customHighlight": {
        "TEMP": {
            "foreground": "#FFFFFF",
            "background": "#dc322f",
            "icon": "issue-opened",
            "iconColour": "#dc322f"
        },
        "TODO": {
            "foreground": "#000000",
            "background": "#cb4b16",
            "icon": "bug",
            "iconColour": "#cb4b16"
        },
        "REVIEW": {
            "foreground": "#000000",
            "background": "#b58900",
            "icon": "flame",
            "iconColour": "#b58900"
        },
        "QUESTION": {
            "foreground": "#FFFFFF",
            "background": "#d33682",
            "icon": "question",
            "iconColour": "#d33682"
        },
        "HACK": {
            "foreground": "#FFFFFF",
            "background": "#268bd2",
            "icon": "check-circle",
            "iconColour": "#268bd2"
        }
    }
}
